{%- liquid
  assign button_style = section.settings.button_style
  assign button_label = section.settings.button_label
  assign button_link = section.settings.button_link
  assign button_icon = section.settings.button_icon

  assign image = section.settings.image
  assign image_ratio = image.aspect_ratio | default: 2.333

  assign image_mobile = section.settings.image_mobile
  if image_mobile == blank
    assign image_mobile = image
  endif
  assign image_mobile_aspect_ratio = image_mobile.aspect_ratio | default: 2.333

  assign loading = 'lazy'
  assign fetchpriority = 'low'
  if section.index < 2
    assign loading = 'eager'
    assign fetchpriority = 'high'
  endif

  assign motion_delay = 50
-%}

{% style %}
  #shopify-section-{{ section.id }} .page-width--full {
    --page-padding: 0;
  }
{% endstyle %}

{% render 'divider',
  show_divider: section.settings.show_section_divider,
  divider_width: section.settings.divider_width
%}

<div
  class="section section-{{ section.id }} section--padding section--lookbook-banner color-{{ section.settings.color_scheme }}"
  style="--section-padding-top: {{ section.settings.padding_top }}px;--section-padding-bottom: {{ section.settings.padding_bottom }}px;"
  data-id="{{ section.id }}"
>
  {% render 'section-heading',
    section_settings: section.settings,
    description_size: section.settings.description_size,
    button_visible: true,
    button_link: button_link,
    button_style: button_style,
    button_label: button_label,
    button_icon: button_icon,
    motion_delay: motion_delay,
    custom_css_class: 'page-width'
  %}
  <div class="dc_section__container">
    <div class="dc-lookbook-banner__info">
      <p
        class="dc_hero-lookbook-tagline"
        style="color:{{  section.settings.custom_tagline_color }}; background-color:{{ section.settings.custom_tagline_bg_color }};"
      >
        {{ section.settings.custom_tagline }}
      </p>

      <h2 class="dc_hero-lookbook-hero-title">
        {{ section.settings.custom_hero_title }}
      </h2>

      <p
        class="dc_hero-lookbook-hero-description"
        style="color:{{ section.settings.custom_hero_description_text_color }}"
      >
        {{ section.settings.custom_hero_description }}
      </p>

      <a href="{{ section.settings.custom_button_link }}" class="dc_hero-lookbook-btn btn btn--primary">
        {{ section.settings.custom_button_text }}
      </a>
    </div>
    <div class="lookbook-card relative">
      <div
        class="dc_hero-lookbook_mobile-header"
      >
        <p
          class="dc_hero-lookbook-tagline_mobile"
          style="color:{{  section.settings.custom_tagline_color }}; background-color:{{ section.settings.custom_tagline_bg_color }};"
        >
          {{ section.settings.custom_tagline }}
        </p>
        <h2 class="dc_hero-lookbook-hero-title_mobile">
          {{ section.settings.custom_hero_title }}
        </h2>
      </div>

      <div
        class="media"
        style="--aspect-ratio:{{ image_ratio }};--aspect-ratio-mobile:{{ image_mobile_aspect_ratio }};"
      >
        <motion-element class="media-wrapper block" style="background:none;" data-motion="zoom-out-sm">
          {% if image == blank %}
            {% liquid
              assign placeholder_svg = 'placeholder-svg'
              if section.settings.image_mobile != blank
                assign placeholder_svg = placeholder_svg | append: ' hidden md:block'
              endif
            %}
            {{ 'lifestyle-1' | placeholder_svg_tag: placeholder_svg }}
          {% endif %}
          {% if image != blank or section.settings.image_mobile != blank %}
            <picture class="block{% if image == blank %} md:hidden{% endif %}">
              {%- if section.settings.image_mobile != blank -%}
                <source
                  media="(max-width: 767px)"
                  srcset="{{ section.settings.image_mobile | image_url: width: '400x' }} 400w, {{ section.settings.image_mobile | image_url: width: '600x' }} 600w, {{ section.settings.image_mobile | image_url: width: '800x' }} 800w, {{ section.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                  width="{{ section.settings.image_mobile.width }}"
                  height="{{ section.settings.image_mobile.height }}"
                >
              {%- endif %}
              {% liquid
                if image == blank
                  assign image = section.settings.image_mobile
                endif
                assign image_height = image.width | divided_by: image.aspect_ratio | round
                assign alt = image.alt | default: shop.name | escape
              %}
              {{
                image
                | image_url: width: 3200
                | image_tag:
                  loading: loading,
                  fetchpriority: fetchpriority,
                  width: image.width,
                  sizes: '100vw',
                  height: image_height,
                  widths: '300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200',
                  alt: alt,
                  class: 'motion-reduce w-full'
              }}
            </picture>
          {%- endif %}
        </motion-element>
      </div>

      {% assign feature_blocks = section.blocks | where: 'type', 'features' %}
      <section class="dc_lookbook-feature_mobile-only">
        {% for block in feature_blocks %}
          {% if block.type == 'features' %}
            <div class="dc_lookbook-feature__item">
              <div class="dc_lookbook-feature__icon">{% render 'icon-check' %}</div>
              <div class="dc_lookbook-feature__content">
                <p class="dc_lookbook-feature__title">{{ block.settings.feature_title }}</p>
                <p class="dc_lookbook-feature__text" style="color:{{ block.settings.feature_text_color }}">
                  {{ block.settings.feature_text }}
                </p>
              </div>
            </div>
            {% unless forloop.last %}
              <hr class="dc_lookbook-feature__divider" style="border-color: {{ block.settings.feature_text_color }};">
            {% endunless %}
          {% endif %}
        {% endfor -%}
      </section>

      {%- liquid
        assign lookbook_icon_index = 0
      -%}
      {%- for block in section.blocks -%}
        {% if block.type == 'hotspot' %}
          {%- capture hotspot_style -%}
        --top: {{ block.settings.top }}%; --left: {{ block.settings.left }}%;
        {%- if image_mobile != blank -%}
          --top-mobile: {{ block.settings.top_mobile }}%; --left-mobile: {{ block.settings.left_mobile }}%;
        {%- endif -%}
        {%- endcapture -%}
          {% render 'custom-lookbook-icon',
            section_settings: section.settings,
            block: block,
            hotspot_style: hotspot_style,
            icon_color: section.settings.icon_color,
            icon_style: section.settings.icon_style,
            card_color_scheme: section.settings.card_color_scheme,
            lookbook_icon_index: lookbook_icon_index
          %}
          {% assign lookbook_icon_index = lookbook_icon_index | plus: 1 %}
        {% endif %}
      {%- endfor -%}
    </div>
  </div>
  <section class="dc_section-container">
    <div class="dc_extra-features__container">
      {% for block in section.blocks %}
        {% if block.type == 'extra_feature' %}
          <div
            class="dc_extra-features__card"
            {{ block.shopify_attributes }}
            style="background-color:{{ block.settings.card_color }};  border: 1px solid {{ block.settings.card_border_color }};"
          >
            <div class="dc_extra-features__icon">
              {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | image_url: width: 64 }}"
                  alt=""
                  width="{{ section.settings.logo.width }}"
                  height="{{ section.settings.logo.height }}"
                >
              {% endif %}
            </div>
            <div class="dc_extra-features__written-content">
              <h3 class="dc_extra-features__title" style="color: {{ block.settings.title_color }}">
                {{ block.settings.title }}
              </h3>

              <p class="dc_extra-features__text" style="color: {{ block.settings.text_color }}">
                {{ block.settings.text }}
              </p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
</div>
